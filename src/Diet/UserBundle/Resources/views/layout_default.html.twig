{% extends 'DietUserBundle::layout.html.twig' %}
{% block header %}
    <header class="navbar navbar-inverse navbar-fixed-top bs-docs-nav" role="banner">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="{{ path('diet_user_home') }}" class="navbar-brand">3Gdiet</a>
            </div>
            <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="{{ path('diet_user_home') }}">Home</a>
                    </li>
                    <li>
                        <a href="{{ path('diet_user_setting') }}">Setting</a>
                    </li>
                    <li>
                        <a href="{{ path('diet_user_history') }}">History</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="{{path('diet_user_logout')}}">logout</a>
                    </li>
                </ul>
            </nav>
        </div><!-- container -->
    </header>
{% endblock %}

{% block content_header %}
    <div class="container" style="height: 70px"></div>
    <div id="alert">
        <div class="container">
            {% for alert in app.session.flashbag.get('warning') %}
                <div class="alert alert-warning">
                    <a class="close" data-dismiss="alert" href="#">×</a>
                    {{ alert|raw }}
                </div><!-- alert -->
            {% endfor %}
            {% for alert in app.session.flashbag.get('success') %}
                <div class="alert alert-success">
                    <a class="close" data-dismiss="alert" href="#">×</a>
                    {{ alert|raw }}
                </div><!-- alert -->
            {% endfor %}
        </div><!-- container -->
    </div><!-- alert -->
{% endblock %}