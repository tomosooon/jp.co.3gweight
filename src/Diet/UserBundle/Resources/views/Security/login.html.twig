{% extends 'DietUserBundle::layout.html.twig' %}
{% block stylesheet %}
<style type="text/css" scoped>
    .absolute-login{
        position: absolute;
        top: 2%;
        right: 2%;
    }
    .absolute-regist{
        position: absolute;
        top: 50%;
        right: 10%;
    }
    .btn-lg {
        padding: 10px 80px;
        font-size: 30px;
        line-height: 1.33;
        border-radius: 6px;
    }
    .btn-regist{
        color: #ffffff;
        background-color: #bb22bb;
        border-color: #aa11aa;

    }
    .btn-regist:hover{
        color: #ffffff;
        background-color: #dd00dd;
    }

    @media (min-width: 768px) {
        .login-small {
            display: none;
        }
    }
    @media(max-width: 767px){
        .login-large{
            display: none;
        }
    }
</style>

{% endblock %}

{% block header %}
    <header class="navbar navbar-inverse navbar-fixed-top bs-docs-nav login-small" role="banner">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="{{ path('diet_user_home') }}" class="navbar-brand">3Gdiet</a>
            </div>
            <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
                <ul class="nav navbar-nav">
                   <li>
                        <a href="{{ path('diet_user_home') }}">Home</a>
                    </li>
                    <li>
                        <a href="{{ path('diet_user_setting') }}">Setting</a>
                    </li>
                    <li>
                        <a href="{{ path('diet_user_history') }}">History</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="{{path('diet_user_logout')}}">logout</a>
                    </li>
                </ul>
            </nav>
        </div><!-- container -->
    </header>
{% endblock %}

{% block content_header %}
    <div class="container login-small" style="height: 50px"></div>
{% endblock %}


{% block content %}
{# src/Acme/SecurityBundle/Resources/views/Security/login.html.twig #}
{% if error %}
    <div>{{ error.message }}</div>
{% endif %}
<div class="login-large">

    <div style="position: absolute;top: 0;left: 0;width: 100%;height: 100%;overflow: hidden;display:block;z-index: -1;">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-example-generic" data-slide-to="1" class=""></li>
                <li data-target="#carousel-example-generic" data-slide-to="2" class=""></li>
                <li data-target="#carousel-example-generic" data-slide-to="3" class=""></li>
            </ol>
            <div class="carousel-inner">
                <div class="item active">
                    <img class="img-responsive" alt="First slide" src="{{ asset('bundles/dietuser/img/toppage/1.jpg') }}">
                </div>
                <div class="item">
                    <img class="img-responsive" alt="Second slide" src="{{ asset('bundles/dietuser/img/toppage/2.jpg') }}">
                </div>
                <div class="item">
                    <img class="img-responsive" alt="Third slide" src="{{ asset('bundles/dietuser/img/toppage/3.jpg') }}">
                </div>
                <div class="item">
                    <img class="img-responsive" alt="Forth slide" src="{{ asset('bundles/dietuser/img/toppage/4.jpg') }}">
                </div>
            </div><!-- carousel-inner -->
            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div><!-- carousel-slide -->
        <button class="btn btn-primary absolute-login" data-toggle="modal" data-target="#login" href="#login">login</button><br><br>
        <button class="btn btn-regist btn-lg absolute-regist" data-toggle="modal" data-target="#regist" href="#regist">regist</button>
    </div>

    <div class="modal fade" id="login">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Login</h4>
          </div>
          <div class="modal-body">
             <div id="myTabContent" class="tab-content" style="margin-top: 10px">
                <div class="tab-pane fade in active" id="login">
                    <form action="{{ path('diet_user_login_check') }}" method="post" role="form">
                        <div class="form-group">
                            <label for="username">E-mail</label><br>
                            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" />
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label><br>
                            <input class="form-control" type="password" id="password" name="_password" />
                        </div>
                        {#
                            If you want to control the URL the user
                            is redirected to on success (more details below)
                            <input type="hidden" name="_target_path" value="/account" />
                        #}
                        <div class="checkbox">
                            <label for="remember_me">
                                <input type="checkbox" id="remember_me" name="_remember_me" checked />Keep me logged in
                            </label>
                        </div><!-- checkbox -->

                        <button class="btn btn-primary" type="submit">login</button>
                    </form>
                </div><!-- tab-pane -->
            </div>
          </div>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

    <div class="modal fade" id="regist">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Regist</h4>
          </div>
          <div class="modal-body">
             <div id="myTabContent" class="tab-content" style="margin-top: 10px">
                <div class="tab-pane fade in active" id="regist">
                    <form method="post" action="{{ path('diet_user_regist') }}">
                    {% form_theme formViews['machine'] 'DietCoreBundle:Form:vertical.html.twig' %}
                    {% form_theme formViews['weight'] 'DietCoreBundle:Form:vertical.html.twig' %}
                    {{ form_row(formViews['machine'].machineid)}}
                    {{ form_row(formViews['weight'].email) }}
                    {{ form_row(formViews['weight'].password) }}
                    <button class="btn btn-primary">登録</button>
                    </form>
                </div><!-- tab-pane -->
            </div>
          </div>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
<!-- login.html.twig ここまで -->
</div>



    <div id="alert">
        <div class="container">
            {% for alert in app.session.flashbag.get('warning') %}
                <div class="alert alert-warning">
                    <a class="close" data-dismiss="alert" href="#">×</a>
                    {{ alert|raw }}
                </div><!-- alert -->
            {% endfor %}
            {% for alert in app.session.flashbag.get('success') %}
                <div class="alert alert-success">
                    <a class="close" data-dismiss="alert" href="#">×</a>
                    {{ alert|raw }}
                </div><!-- alert -->
            {% endfor %}
        </div><!-- container -->
    </div><!-- alert -->
