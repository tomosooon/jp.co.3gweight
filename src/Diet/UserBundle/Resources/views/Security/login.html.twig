                </div>
                <div class="item">
                    <img class="img-responsive" alt="Third slide" src="{{ asset('bundles/dietuser/img/toppage/3.jpg') }}">
                </div>
                <div class="item">
                    <img class="img-responsive" alt="Forth slide" src="{{ asset('bundles/dietuser/img/toppage/4.jpg') }}">
                </div>
            </div><!-- carousel-inner -->
            <a class="left carousel-control" href="#carousel-small-generic" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="right carousel-control" href="#carousel-small-generic" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div><!-- carousel-slide -->
        <div class="container" style="margin-top: 20px;">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#login" data-toggle="tab">login</a></li>
                <li><a href="#regist" data-toggle="tab">regist</a></li>
            </ul>
            <div id="myTabContent" class="tab-content" style="margin-top: 10px">
                <div class="tab-pane fade in active" id="login">
                    <form action="{{ path('diet_user_login_check') }}" method="post" role="form">
                        <div class="form-group">
                            <label for="username">E-mail</label><br>
                            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" />
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label><br>
                            <input class="form-control" type="password" id="password" name="_password" />
                        </div>
                        {#
